    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="368dp"
            android:orientation="horizontal"
            android:layout_height="70dp"/>
        <LinearLayout
            android:id="@+id/chat1"
            android:addStatesFromChildren="true"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="96dp"
                    android:layout_height="50dp"
                    android:background="@drawable/man5"
                    android:id="@+id/textView" />

                <TextView
                    android:id="@+id/redpoint"
                    android:layout_width="20dp"
                    android:visibility="visible"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/design_red_point"
                    android:text="2"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="12sp" />

            </FrameLayout>

            <TextView
                android:id="@+id/scroll"
                android:layout_marginLeft="10dip"
                android:layout_gravity="center"
                android:background="@drawable/shape_corner"
                android:layout_width="250dp"
                android:layout_height="50dp"

                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"

                android:text="hello peter!I think the depth of Pride and Prejudice is the reason that makes this book prominent and classic."
                android:gravity="center"
                android:textSize="20sp"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:background="@drawable/man" />

            <TextView
                android:id="@+id/showaccount"
                android:layout_marginLeft="10dip"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textColor="@color/antiquewhite"
                android:background="@drawable/shape_corner"
                android:gravity="center"
                android:textSize="20sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lvcontact"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_width="96dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Account:"/>
            <EditText
                android:layout_marginLeft="10dip"
                android:layout_gravity="center"
                android:hint="Type something here"
                android:layout_width="250dp"
                android:layout_height="50dp"

                android:gravity="center"
                android:textSize="20sp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/red"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/testhanlder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TestHandler"
            android:textColor="@color/red"
            android:layout_gravity="center" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
